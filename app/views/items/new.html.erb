<div class = "col-md-8 offset-md-1">
<h2>商品新規登録</h2>

<!--エラーメッセージ-->
<div class = "errors">
<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました<br>
  <% @item.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
</div>

<!-- form_with部分 -->
<%= form_with model: @item, url:'/items', local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <div class = "form-group">
   <h4>商品名</h4>
   <%= f.text_field :item_name, class: 'form-control' %>
  </div>
  <div class = "form-group">
   <h4>商品説明</h4>
   <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class = "form-group">
   <h4>ジャンル</h4>
   <%= f.select :genre_id, [["ケーキ", "ケーキ"], ["クッキー", "クッキー"], ["キャンディー", "キャンディー"]], include_blank: "選択して下さい", class: 'form-control'  %>
  <!--ジャンルができたら実装-->
   <%#= f.select :genre_id, Genre.all, :id, :genre_name, include_blank: "選択して下さい",class: 'form-control'  %>
  </div>
   <div class = "form-group">
   <h4>税抜価格</h4>
    <%= f.text_field :price_without_tax, class: 'form-control' %><%= "円" %>
  </div>
   <div class = "form-group">
   <h4>販売ステータス</h4>
   <%= f.label :sales_status, '販売中' %>
   <%= f.radio_button :sales_status, 'true' %>
   <%= f.label :sales_status, '販売停止中' %>
   <%= f.radio_button :sales_status, 'false' %>
  </div>
<%= f.submit '新規登録', class: "btn btn-success" %>
<% end %>
</div>
